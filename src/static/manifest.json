{
  "manifest_version": 3,
  "name": "Ghost Reader",
  "author": "Raghavan Lakshmana",
  "version": "0.0.1",
  "description": "Get answers for anything on the page",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png",
    "196": "icons/icon-196.png",
    "256": "icons/icon-256.png"
  },
  "action": {
    "default_title": "Ghost Reader",
    "default_popup": "popup.html",
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png",
      "196": "icons/icon-196.png",
      "256": "icons/icon-256.png"
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "reader.js"
      ]
    }
  ]
}
